%h2 Sign In
= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'custom' }) do |f|

  = f.label :email, 'Email Address'
  = f.email_field :email, :autofocus => true, :placeholder => 'me@example.com'
  
  = f.label :password, 'Password'
  = f.password_field :password

  - if devise_mapping.rememberable?
    = f.label :remember_me do
      = f.check_box :remember_me, style: 'display:none;'
      %span.custom.checkbox
      Remember Me
    %br

  = f.submit "Sign In", :class => 'button'

= render "devise/shared/links"